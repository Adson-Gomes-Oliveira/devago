{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                              
    "rootDir": "./src",                                  
    "typeRoots": ["./src/types", "./node_modules/@types"],                               
    "outDir": "./build",                                   
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "experimentalDecorators": true,                               
  },
  "exclude": ["src/database/migrations", "src/database/seeders"]
}
